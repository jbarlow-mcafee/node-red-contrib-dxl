{
  "name": "@opendxl/node-red-contrib-dxl",
  "version": "0.0.1",
  "author": "McAfee, Inc.",
  "description": "DXL nodes for Node-RED",
  "license": "Apache-2.0",
  "keywords": [
    "opendxl",
    "dxl",
    "mcafee",
    "Node-RED"
  ],
  "files": [
    "dxl.html",
    "dxl.js"
  ],
  "engines": {
    "node": ">=4.0.0"
  },
  "dependencies": {
    "@opendxl/dxl-client": "^0.0.1"
  },
  "devDependencies": {
    "jshint": "^2.9.5",
    "eslint-plugin-html": "^3.2.2",
    "standard": "^10.0.3",
    "snazzy": "^7.0.0"
  },
  "eslintConfig": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/opendxl/node-red-contrib-dxl.git"
  },
  "node-red": {
    "nodes": {
      "dxl-client": "./nodes/dxl-client.js",
      "dxl-event-in": "./nodes/dxl-event-in.js",
      "dxl-event-out": "./nodes/dxl-event-out.js",
      "dxl-request": "./nodes/dxl-request.js",
      "dxl-response": "./nodes/dxl-response.js",
      "dxl-service": "./nodes/dxl-service.js"
    }
  },
  "scripts": {
    "snazzy": "npm run standard | node_modules/.bin/snazzy",
    "standard": "node_modules/.bin/standard \"**/*.html\" \"**/*.js\""
  },
  "standard": {
    "globals": [
      "RED",
      "$"
    ],
    "plugins": [
      "html"
    ]
  }
}
